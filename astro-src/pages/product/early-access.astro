---
import Layout from '../../layouts/Layout.astro';
import PostHogInit from '../../../src/components/PostHogInit';
import SimpleNav from '../../components/SimpleNav.astro';
import SimpleFooter from '../../components/SimpleFooter.astro';
---

<Layout 
  title="Early Access - Desktop Commander App"
  description="Take control of your machine. Local filesystem access. Pick your own model. Infinite chats. Join the waitlist for Desktop Commander app."
>
  <!-- Load PostHog early to initialize analytics -->
  <PostHogInit client:load />
  
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-950">
    <SimpleNav />
    
    <main>
      <!-- Hero Section -->
      <section class="relative pt-32 pb-16 md:pt-48 md:pb-24">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Left Column - Hero Text -->
            <div>
              <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-white leading-[1.1] mb-4">
                Take control of your machine.
              </h1>
              <p class="text-lg sm:text-xl text-slate-400 leading-relaxed mt-6">
                Local filesystem access. Pick your own model. Infinite chats.
              </p>
            </div>

            <!-- Right Column - Signup Card -->
            <div class="flex justify-center lg:justify-end">
              <div class="w-full max-w-md bg-slate-900/80 backdrop-blur-xl border border-slate-700/50 rounded-2xl p-8 sm:p-10 shadow-2xl">
                <!-- Icon -->
                <div class="flex justify-center mb-6">
                  <div class="p-4 bg-blue-600/10 rounded-full border border-blue-500/20">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-400">
                      <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"></path>
                      <path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"></path>
                      <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"></path>
                      <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"></path>
                    </svg>
                  </div>
                </div>

                <!-- Title & Description -->
                <div class="text-center mb-8">
                  <h3 class="text-xl font-semibold text-white mb-3">Build Without Barriers</h3>
                  <p class="text-slate-300 leading-relaxed">
                    Desktop Commander bridges your technical gaps. Code, build, and deployâ€”all in natural language, all on your local machine.
                  </p>
                </div>

                <!-- Features List -->
                <div class="mb-8 space-y-3">
                  <div class="flex items-center gap-3 text-slate-300">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-400 flex-shrink-0">
                      <path d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"></path>
                    </svg>
                    <span class="text-sm">Full control of your system</span>
                  </div>
                  <div class="flex items-center gap-3 text-slate-300">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-400 flex-shrink-0">
                      <path d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"></path>
                    </svg>
                    <span class="text-sm">Choose any AI model you want</span>
                  </div>
                  <div class="flex items-center gap-3 text-slate-300">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-400 flex-shrink-0">
                      <path d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"></path>
                    </svg>
                    <span class="text-sm">Infinite chats</span>
                  </div>
                </div>

                <!-- CTA Button -->
                <a 
                  href="https://tally.so/r/VLE7dv"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center gap-2 w-full bg-blue-600 hover:bg-blue-500 text-white font-semibold py-4 px-6 rounded-xl shadow-lg transition-all duration-300 hover:scale-105"
                >
                  <span>Join Waitlist</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14"></path>
                    <path d="m12 5 7 7-7 7"></path>
                  </svg>
                </a>

                <p class="text-center text-xs text-slate-500 mt-4">
                  Join first 100 users with early access
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <SimpleFooter />
  </div>
</Layout>
