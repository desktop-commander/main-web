---
import Layout from '../../layouts/Layout.astro';
import PostHogInit from '../../../src/components/PostHogInit';
import SimpleNav from '../../components/SimpleNav.astro';
import SimpleFooter from '../../components/SimpleFooter.astro';
---

<Layout 
  title="Early Access - Desktop Commander App"
  description="Take control of your machine. Local filesystem access. Pick your own model. Infinite chats. Join the waitlist for Desktop Commander app."
>
  <PostHogInit client:load />
  
  <!-- HubSpot Forms Script -->
  <script src="https://js-eu1.hsforms.net/forms/embed/146727725.js" defer></script>
  
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-950">
    <SimpleNav />
    
    <main>
      <!-- Hero Section -->
      <section class="relative pt-32 pb-16 md:pt-48 md:pb-24">
        <div class="container mx-auto max-w-7xl px-4 sm:px-6">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Left Column - Hero Text -->
            <div>
              <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-white leading-[1.1] mb-4">
                Take control of your machine.
              </h1>
              <p class="text-lg sm:text-xl text-slate-400 leading-relaxed mt-6">
                Local filesystem access. Pick your own model. Infinite chats.
              </p>
            </div>

            <!-- Right Column - Signup Card -->
            <div class="flex justify-center lg:justify-end">
              <div class="w-full max-w-md bg-slate-900/80 backdrop-blur-xl border border-slate-700/50 rounded-2xl p-8 sm:p-10 shadow-2xl">
                <!-- Icon -->
                <div class="flex justify-center mb-6">
                  <div class="p-4 bg-blue-600/10 rounded-full border border-blue-500/20">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-400">
                      <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"></path>
                      <path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"></path>
                      <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"></path>
                      <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"></path>
                    </svg>
                  </div>
                </div>

                <!-- Title & Description -->
                <div class="text-center mb-6">
                  <h3 class="text-xl font-semibold text-white mb-3">Build Without Barriers</h3>
                  <p class="text-slate-300 leading-relaxed text-sm">
                    Desktop Commander bridges your technical gaps. Code, build, and deployâ€”all in natural language, all on your local machine.
                  </p>
                </div>

                <!-- Features List -->
                <div class="mb-8 space-y-3">
                  <div class="flex items-center gap-3 text-slate-300">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-400 flex-shrink-0">
                      <path d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"></path>
                    </svg>
                    <span class="text-sm">Full control of your system</span>
                  </div>
                  <div class="flex items-center gap-3 text-slate-300">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-400 flex-shrink-0">
                      <path d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"></path>
                    </svg>
                    <span class="text-sm">Choose any AI model you want</span>
                  </div>
                  <div class="flex items-center gap-3 text-slate-300">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-400 flex-shrink-0">
                      <path d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"></path>
                    </svg>
                    <span class="text-sm">Infinite chats</span>
                  </div>
                </div>

                <!-- HubSpot Form -->
                <div class="hubspot-form-wrapper">
                  <div 
                    class="hs-form-frame" 
                    data-region="eu1" 
                    data-form-id="a539622f-bf22-490f-a3b7-32a6f647614d" 
                    data-portal-id="146727725"
                  ></div>
                </div>

                <p class="text-center text-xs text-slate-500 mt-4">
                  Join first 100 users with early access
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <SimpleFooter />
  </div>

  <!-- HubSpot Form Styling -->
  <style is:global>
    .hubspot-form-wrapper {
      min-height: 100px;
    }
    
    /* Reset HubSpot container */
    .hs-form-frame > div,
    .hs-form-frame .hbspt-form,
    .hs-form-frame form {
      background: transparent !important;
      padding: 0 !important;
      border: none !important;
      box-shadow: none !important;
    }
    
    /* Input fields */
    .hs-form-frame input[type="text"],
    .hs-form-frame input[type="email"],
    .hs-form-frame input[type="tel"],
    .hs-form-frame textarea,
    .hs-form-frame select {
      background-color: rgba(15, 23, 42, 0.9) !important;
      border: 1px solid rgba(71, 85, 105, 0.5) !important;
      border-radius: 0.75rem !important;
      color: #f1f5f9 !important;
      padding: 0.875rem 1rem !important;
      font-size: 0.9375rem !important;
      width: 100% !important;
      transition: border-color 0.2s, box-shadow 0.2s !important;
    }
    
    .hs-form-frame input:focus,
    .hs-form-frame textarea:focus {
      outline: none !important;
      border-color: rgba(59, 130, 246, 0.6) !important;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1) !important;
    }
    
    .hs-form-frame input::placeholder {
      color: #64748b !important;
    }
    
    /* Labels - hide if using placeholder only */
    .hs-form-frame label {
      color: #cbd5e1 !important;
      font-size: 0.875rem !important;
      font-weight: 500 !important;
      margin-bottom: 0.5rem !important;
      display: block !important;
    }
    
    .hs-form-frame .hs-form-required {
      color: #f87171 !important;
    }
    
    /* Submit button */
    .hs-form-frame input[type="submit"],
    .hs-form-frame .hs-button {
      background-color: #2563eb !important;
      color: white !important;
      border: none !important;
      border-radius: 0.75rem !important;
      padding: 1rem 1.5rem !important;
      font-size: 1rem !important;
      font-weight: 600 !important;
      width: 100% !important;
      cursor: pointer !important;
      transition: all 0.3s !important;
      box-shadow: 0 4px 14px 0 rgba(37, 99, 235, 0.3) !important;
    }
    
    .hs-form-frame input[type="submit"]:hover,
    .hs-form-frame .hs-button:hover {
      background-color: #3b82f6 !important;
      transform: translateY(-1px) !important;
      box-shadow: 0 6px 20px 0 rgba(37, 99, 235, 0.4) !important;
    }
    
    /* Form field spacing */
    .hs-form-frame .hs-form-field {
      margin-bottom: 1rem !important;
    }
    
    .hs-form-frame .input {
      margin-right: 0 !important;
    }
    
    /* Error messages */
    .hs-form-frame .hs-error-msgs {
      list-style: none !important;
      padding: 0 !important;
      margin: 0.5rem 0 0 0 !important;
    }
    
    .hs-form-frame .hs-error-msgs li {
      color: #f87171 !important;
      font-size: 0.75rem !important;
    }
    
    /* Success message */
    .hs-form-frame .submitted-message {
      color: #4ade80 !important;
      text-align: center !important;
      padding: 1.5rem !important;
      font-size: 1rem !important;
      font-weight: 500 !important;
    }
    
    /* Hide any HubSpot branding */
    .hs-form-frame .hubspot-link__container,
    .hs-form-frame .hs-form__virality-link {
      display: none !important;
    }
    
    /* Loading state */
    .hubspot-form-wrapper:empty::after {
      content: "Loading...";
      display: block;
      text-align: center;
      color: #64748b;
      font-size: 0.875rem;
      padding: 2rem;
    }
  </style>
</Layout>
