---
import Layout from '../layouts/Layout.astro';
import PostHogInit from '../../src/components/PostHogInit';
import NavigationLandingPage from '../../src/components/NavigationLandingPage';
import Footer from '../../src/components/Footer';
---

<Layout 
  title="Welcome to Desktop Commander"
  description="You're all set! Try your first command with Desktop Commander."
>
  <PostHogInit client:load />
  
  <div class="min-h-screen bg-background">
    <NavigationLandingPage client:load />
    
    <main class="pt-24 pb-16 md:pt-32 md:pb-24">
      <div class="container mx-auto max-w-3xl px-4 sm:px-6">
        
        <!-- Hero: Single Focus -->
        <div class="text-center mb-10">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-green-500/20 rounded-full mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
              <path d="M20 6 9 17l-5-5"/>
            </svg>
          </div>
          <h1 class="text-3xl sm:text-4xl font-bold text-foreground mb-3">
            You're all set!
          </h1>
          <p class="text-xl text-muted-foreground">
            Try your first command
          </p>
        </div>

        <!-- Main CTA: Copy Prompt -->
        <div class="bg-gradient-to-br from-primary/10 via-dc-card/50 to-dc-card/30 border border-primary/20 rounded-2xl p-8 mb-8">
          <p class="text-muted-foreground text-center mb-4">
            Copy this into Claude Desktop and watch the magic:
          </p>
          
          <!-- Big copyable prompt -->
          <div class="relative group max-w-xl mx-auto">
            <div class="bg-dc-surface border border-dc-border rounded-xl p-5 pr-14 font-mono text-lg text-foreground text-center">
              Organize my Downloads folder by file type
            </div>
            <button 
              id="copy-prompt-btn"
              class="absolute right-4 top-1/2 -translate-y-1/2 p-2 text-muted-foreground hover:text-foreground hover:bg-dc-card rounded-lg transition-colors"
              title="Copy to clipboard"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" id="copy-icon">
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" id="check-icon" class="hidden text-green-400">
                <path d="M20 6 9 17l-5-5"/>
              </svg>
            </button>
          </div>

          <!-- Video preview -->
          <div class="mt-6 rounded-lg overflow-hidden max-w-2xl mx-auto">
            <video class="w-full h-auto" autoplay loop muted playsinline>
              <source src="/videos/welcome-try-prompt.mp4" type="video/mp4" />
            </video>
          </div>
        </div>

        <!-- Inline email capture -->
        <div class="text-center mb-8">
          <p class="text-muted-foreground mb-3">
            Want more prompts like this?
          </p>
          <div class="max-w-md mx-auto hubspot-form-wrapper">
            <script src="https://js-eu1.hsforms.net/forms/embed/146727725.js" defer></script>
            <div class="hs-form-frame" data-region="eu1" data-form-id="5fc2eb78-4b8b-4f64-a213-37d0fbb86a50" data-portal-id="146727725"></div>
          </div>
          <p class="text-xs text-muted-foreground mt-2">
            <a href="/privacy" class="text-primary hover:text-primary/80 underline">Privacy Policy</a>
          </p>
        </div>

        <!-- Collapsible troubleshooting -->
        <details class="bg-dc-card/30 border border-dc-border rounded-xl">
          <summary class="px-6 py-4 cursor-pointer text-muted-foreground hover:text-foreground transition-colors flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
              <path d="M12 17h.01"/>
            </svg>
            <span>Having issues? Click here for setup help</span>
          </summary>
          
          <div class="px-6 pb-6 space-y-6">
            <!-- Step 1 -->
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary/20 rounded-full flex items-center justify-center">
                <span class="text-primary font-semibold text-sm">1</span>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-foreground mb-1">Make sure Desktop Commander is enabled</h3>
                <p class="text-sm text-muted-foreground mb-3">Go to Claude Desktop settings and check that Desktop Commander is toggled on.</p>
                <div class="rounded-lg overflow-hidden">
                  <video class="w-full h-auto" muted playsinline controls>
                    <source src="/videos/welcome-enable-dc.mp4" type="video/mp4" />
                  </video>
                </div>
              </div>
            </div>

            <!-- Step 2 -->
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary/20 rounded-full flex items-center justify-center">
                <span class="text-primary font-semibold text-sm">2</span>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-foreground mb-1">Allow tools in connector settings</h3>
                <p class="text-sm text-muted-foreground mb-3">You may need to enable tools in your MCP connector settings.</p>
                <div class="rounded-lg overflow-hidden">
                  <video class="w-full h-auto" muted playsinline controls>
                    <source src="/videos/welcome-allow-tools.mp4" type="video/mp4" />
                  </video>
                </div>
              </div>
            </div>

            <!-- More help link -->
            <div class="text-center pt-2">
              <a 
                href="https://github.com/wonderwhy-er/DesktopCommanderMCP#troubleshooting" 
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-primary hover:text-primary/80 transition-colors"
              >
                Still stuck? Check the full troubleshooting guide â†’
              </a>
            </div>
          </div>
        </details>

        <!-- Secondary CTAs -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 mt-8">
          <a 
            href="/library/" 
            class="flex items-center justify-center gap-2 bg-dc-card/30 hover:bg-dc-card/60 border border-dc-border rounded-lg p-3 text-sm text-muted-foreground hover:text-foreground transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/>
            </svg>
            <span class="font-medium">Prompt Library</span>
          </a>
          
          <a 
            href="https://discord.gg/kQ27sNnZr7" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-2 bg-dc-card/30 hover:bg-dc-card/60 border border-dc-border rounded-lg p-3 text-sm text-muted-foreground hover:text-foreground transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
            </svg>
            <span class="font-medium">Join Discord</span>
          </a>
          
          <a 
            href="https://github.com/wonderwhy-er/DesktopCommanderMCP" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-2 bg-dc-card/30 hover:bg-dc-card/60 border border-dc-border rounded-lg p-3 text-sm text-muted-foreground hover:text-foreground transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span class="font-medium">Star on GitHub</span>
          </a>
        </div>

      </div>
    </main>

    <Footer client:visible />
  </div>

  <script is:inline>
    document.getElementById('copy-prompt-btn').addEventListener('click', async function() {
      const prompt = 'Organize my Downloads folder by file type';
      try {
        await navigator.clipboard.writeText(prompt);
        document.getElementById('copy-icon').classList.add('hidden');
        document.getElementById('check-icon').classList.remove('hidden');
        setTimeout(() => {
          document.getElementById('copy-icon').classList.remove('hidden');
          document.getElementById('check-icon').classList.add('hidden');
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  </script>
</Layout>
