---
import Layout from '../layouts/Layout.astro';
import PostHogInit from '../../src/components/PostHogInit';
import NavigationLandingPage from '../../src/components/NavigationLandingPage';
import Footer from '../../src/components/Footer';
---

<Layout 
  title="Welcome to Desktop Commander"
  description="Desktop Commander installed! Try your first command."
>
  <PostHogInit client:load />
  
  <div class="min-h-screen bg-background">
    <NavigationLandingPage client:load />
    
    <main class="pt-24 pb-16 md:pt-32 md:pb-24">
      <div class="container mx-auto max-w-3xl px-4 sm:px-6">
        
        <!-- Celebration Hero -->
        <div class="text-center mb-10 relative">
          <!-- Confetti container -->
          <div id="confetti-container" class="absolute inset-0 pointer-events-none overflow-hidden"></div>
          
          <!-- Animated checkmark -->
          <div class="inline-flex items-center justify-center w-20 h-20 bg-green-500/20 rounded-full mb-6 relative animate-success-pop">
            <svg class="checkmark w-10 h-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
              <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" stroke="rgb(74 222 128)" stroke-width="2"/>
              <path class="checkmark-check" fill="none" stroke="rgb(74 222 128)" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" d="M14 27l7 7 16-16"/>
            </svg>
            <!-- Glow effect -->
            <div class="absolute inset-0 rounded-full bg-green-400/20 animate-pulse-glow"></div>
          </div>
          
          <h1 class="text-3xl sm:text-4xl font-bold text-foreground mb-3 animate-fade-in-up">
            Desktop Commander Installed!
          </h1>
          <p class="text-xl text-muted-foreground animate-fade-in-up animation-delay-100">
            Let's try your first command
          </p>
        </div>

        <!-- Main CTA: Copy Prompt -->
        <div class="bg-gradient-to-br from-primary/10 via-dc-card/50 to-dc-card/30 border border-primary/20 rounded-2xl p-8 mb-8 animate-fade-in-up animation-delay-200">
          <p class="text-muted-foreground text-center mb-4">
            Copy this into Claude Desktop:
          </p>
          
          <!-- Big copyable prompt -->
          <div class="relative group max-w-xl mx-auto">
            <div class="bg-dc-surface border border-dc-border rounded-xl p-5 pr-14 font-mono text-lg text-foreground text-center">
              Organize my Downloads folder by file type
            </div>
            <button 
              id="copy-prompt-btn"
              class="absolute right-4 top-1/2 -translate-y-1/2 p-2 text-muted-foreground hover:text-foreground hover:bg-dc-card rounded-lg transition-colors"
              title="Copy to clipboard"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" id="copy-icon">
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" id="check-icon" class="hidden text-green-400">
                <path d="M20 6 9 17l-5-5"/>
              </svg>
            </button>
          </div>

          <!-- Video preview -->
          <div class="mt-6 rounded-lg overflow-hidden max-w-2xl mx-auto">
            <video class="w-full h-auto" autoplay loop muted playsinline>
              <source src="/videos/welcome-try-prompt.mp4" type="video/mp4" />
            </video>
          </div>
        </div>

        <!-- Explore more prompts -->
        <div class="text-center mb-8">
          <a 
            href="/library/" 
            class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-primary-foreground font-medium px-6 py-3 rounded-lg transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/>
            </svg>
            Explore More Prompts
          </a>
        </div>

        <!-- Small email capture -->
        <div class="bg-dc-card/30 border border-dc-border rounded-xl p-6 mb-8">
          <p class="text-center text-muted-foreground mb-3">
            Get new prompts & tips in your inbox
          </p>
          <div class="max-w-md mx-auto hubspot-form-wrapper">
            <script src="https://js-eu1.hsforms.net/forms/embed/146727725.js" defer></script>
            <div class="hs-form-frame" data-region="eu1" data-form-id="5fc2eb78-4b8b-4f64-a213-37d0fbb86a50" data-portal-id="146727725"></div>
          </div>
          <p class="text-xs text-muted-foreground mt-2 text-center">
            <a href="/privacy" class="text-primary hover:text-primary/80 underline">Privacy Policy</a>
          </p>
        </div>

        <!-- Bottom links -->
        <div class="flex flex-wrap items-center justify-center gap-4 text-sm">
          <a 
            href="https://discord.gg/kQ27sNnZr7" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            Join Discord
          </a>
          <span class="text-muted-foreground/30">•</span>
          <a 
            href="https://github.com/wonderwhy-er/DesktopCommanderMCP" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            Star on GitHub
          </a>
          <span class="text-muted-foreground/30">•</span>
          <a 
            href="https://github.com/wonderwhy-er/DesktopCommanderMCP#troubleshooting" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            Having issues?
          </a>
        </div>

      </div>
    </main>

    <Footer client:visible />
  </div>

  <style>
    /* Animated checkmark */
    .checkmark-circle {
      stroke-dasharray: 166;
      stroke-dashoffset: 166;
      animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
    }
    .checkmark-check {
      stroke-dasharray: 48;
      stroke-dashoffset: 48;
      animation: stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.4s forwards;
    }
    @keyframes stroke {
      100% { stroke-dashoffset: 0; }
    }
    
    /* Success pop */
    @keyframes success-pop {
      0% { transform: scale(0); opacity: 0; }
      50% { transform: scale(1.2); }
      100% { transform: scale(1); opacity: 1; }
    }
    .animate-success-pop {
      animation: success-pop 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
    }
    
    /* Pulse glow */
    @keyframes pulse-glow {
      0%, 100% { opacity: 0.3; transform: scale(1); }
      50% { opacity: 0.6; transform: scale(1.1); }
    }
    .animate-pulse-glow {
      animation: pulse-glow 2s ease-in-out infinite;
    }
    
    /* Fade in up */
    @keyframes fade-in-up {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in-up {
      animation: fade-in-up 0.6s ease-out forwards;
    }
    .animation-delay-100 { animation-delay: 0.1s; opacity: 0; }
    .animation-delay-200 { animation-delay: 0.2s; opacity: 0; }
    
    /* Confetti */
    .confetti {
      position: absolute;
      width: 10px;
      height: 10px;
      opacity: 0;
    }
    @keyframes confetti-fall {
      0% { opacity: 1; transform: translateY(0) rotate(0deg); }
      100% { opacity: 0; transform: translateY(400px) rotate(720deg); }
    }
  </style>

  <script is:inline>
    // Copy button
    document.getElementById('copy-prompt-btn').addEventListener('click', async function() {
      const prompt = 'Organize my Downloads folder by file type';
      try {
        await navigator.clipboard.writeText(prompt);
        document.getElementById('copy-icon').classList.add('hidden');
        document.getElementById('check-icon').classList.remove('hidden');
        setTimeout(() => {
          document.getElementById('copy-icon').classList.remove('hidden');
          document.getElementById('check-icon').classList.add('hidden');
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });

    // Confetti effect
    function createConfetti() {
      const container = document.getElementById('confetti-container');
      const colors = ['#3b82f6', '#22c55e', '#eab308', '#ef4444', '#8b5cf6', '#ec4899'];
      
      for (let i = 0; i < 50; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        confetti.style.left = Math.random() * 100 + '%';
        confetti.style.top = '-10px';
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
        confetti.style.animation = `confetti-fall ${1.5 + Math.random() * 2}s ease-out ${Math.random() * 0.5}s forwards`;
        container.appendChild(confetti);
      }
      
      // Clean up after animation
      setTimeout(() => {
        container.innerHTML = '';
      }, 4000);
    }
    
    // Trigger confetti on load
    setTimeout(createConfetti, 300);
  </script>
</Layout>
