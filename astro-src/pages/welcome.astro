---
import Layout from '../layouts/Layout.astro';
import PostHogInit from '../../src/components/PostHogInit';
import WaitlistBanner from '../../src/components/WaitlistBanner';
import NavigationAstro from '../../src/components/NavigationAstro';
import Footer from '../../src/components/Footer';
---

<Layout 
  title="Welcome to Desktop Commander"
  description="Desktop Commander installed! Get started now."
>
  <PostHogInit client:load />
  
  <WaitlistBanner client:load />
  
  <div class="min-h-screen bg-background">
    <NavigationAstro hideInstall={true} client:load />
    
    <main class="pt-32 pb-16 md:pt-36 md:pb-24">
      <div class="container mx-auto max-w-4xl px-4 sm:px-6">
        
        <!-- Celebration Header - Compact -->
        <div class="text-center mb-10 relative">
          <div id="confetti-container" class="absolute inset-0 pointer-events-none overflow-hidden"></div>
          
          <div class="inline-flex items-center justify-center w-16 h-16 relative mb-4">
            <div class="absolute inset-0 rounded-full bg-green-500/20 animate-ping-slow"></div>
            <div class="absolute inset-2 rounded-full bg-green-500/10 animate-ping-slower"></div>
            <div class="relative w-14 h-14 bg-green-500/20 rounded-full flex items-center justify-center animate-success-pop">
              <svg class="checkmark w-7 h-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" stroke="rgb(74 222 128)" stroke-width="2"/>
                <path class="checkmark-check" fill="none" stroke="rgb(74 222 128)" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" d="M14 27l7 7 16-16"/>
              </svg>
            </div>
          </div>
          
          <h1 class="text-2xl sm:text-3xl font-bold text-foreground mb-3">
            Desktop Commander Installed!
          </h1>
          <p class="text-base text-muted-foreground">
            Copy a prompt below into Claude Desktop to get started
          </p>
        </div>

        <!-- HERO: Side-by-side layout - Prompts Left, Video Right -->
        <div class="flex flex-col gap-6 mb-10 animate-fade-in-up animation-delay-200">
          
