    <NavigationLandingPage client:load />
    
    <main>
      <NativeAIHeroSection client:load />
      <NativeAIProblemSection client:visible />
      <NativeAISolutionSection client:visible />
      <NativeAIWhySection client:visible />
      <NativeAIComparisonSection client:visible />
      <NativeAIHowItWorksSection client:visible />
      <NativeAIPersonasSection client:visible />
      <NativeAIFinalCTASection client:visible />
